{
  "$schema": "http://json.schemastore.org/template",
  "author": "Xabaril",
  "classifications": [ "Xabaril","K8S","Operator","DotNet" ],
  "identity": "k8soperator",
  "name": "Xabaril K8S Operator pattern template",
  "sourceName": "__ProjectName__",
  "tags": {
    "language": "C#"
  },
  "shortName": "k8soperator",
  "preferNameDirectory" : true,
  "symbols": {
    "crd-name": {
      "type": "parameter",
      "isRequired": true,
      "datatype": "text",
      "defaultValue": "Lucecu",
      "replaces": "{{crdname}}",
      "fileRename": "{{crdname}}",
      "description": "The crd name to be used."
    },
    "crd-plural-name": {
      "type": "parameter",
      "isRequired": true,
      "datatype": "text",
      "defaultValue": "Lucecus",
      "replaces": "{{crdpluralname}}",
      "description": "The crd plura name to be used."
    },
    "crd-short-name": {
      "type": "parameter",
      "isRequired": true,
      "datatype": "text",
      "defaultValue": "lc",
      "replaces": "{{crdshortname}}",
      "description": "The crd short name to be used."
    },
    "crd-group-name": {
      "type": "parameter",
      "isRequired": false,
      "datatype": "text",
      "defaultValue": "xabaril.io",
      "replaces": "{{crdgroupname}}",
      "description": "The crd group name to be used."
    },
    "crd-name-lower":{
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source":"crd-name",
        "toLower": true
      },
      "replaces":"{{crdlowername}}"
    },
    "crd-plural-name-lower":{
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source":"crd-plural-name",
        "toLower": true
      },
      "replaces":"{{crdplurallowername}}"
    },
    "crd-short-name-lower":{
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source":"crd-short-name",
        "toLower": true
      },
      "replaces":"{{crdlowershortname}}"
    },
    "crd-group-name-lower":{
      "type": "generated",
      "generator": "casing",
      "parameters": {
        "source":"crd-group-name",
        "toLower": true
      },
      "replaces":"{{crdlowergroupname}}"
    }
  }
}  
